<div id="post_content">
	<h1><%= @post.title %></h1>
	<p><%= @post.content %></p>

	<div id="comments">
		<h2><%= pluralize(@post.comments.count, "Comment") %></h2>
		<%= render(@post.comments) %>

		<% if user_signed_in? %>
			<h3>Reply to this post</h3>
			<%= render("comments/form") %>
		<% else %>		
			<h3>Please Sign in to Reply to this post</h3>
		<% end %>
	</div>
	<% if @post.user == current_user %>
		<br> <hr class="horcol"> <br>
		<%= link_to("Edit", edit_post_path(@post), :class => "button") %>
		<%= link_to("Delete", post_path(@post), :method => :delete, :data => { :confirm => "Are you sure you want to delete this Post?" }, :class => "button") %>
		<%= link_to("Home", root_path, :class => "button") %>	
	<% end %>
</div>
